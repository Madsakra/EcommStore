<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.4.xsd">

    <changeSet id="create-notification-table" author="colin">

        <!-- 1. Create Table -->
        <createTable tableName="notification">
            <column name="notification_id" type="CHAR(36)">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="admin_id" type="CHAR(36)">
                <constraints nullable="false"/>
            </column>

            <column name="client_id" type="CHAR(36)">
                <constraints nullable="false"/>
            </column>

            <column name="batch_order_id" type="CHAR(36)">
                <constraints nullable="false"/>
            </column>

            <column name="total_paid" type="DECIMAL(19,2)">
                <constraints nullable="false"/>
            </column>

            <column name="created_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>

            <column name="order_status" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <!-- 2. Foreign Keys -->
        <addForeignKeyConstraint
                baseTableName="notification"
                baseColumnNames="admin_id"
                referencedTableName="account"
                referencedColumnNames="id"
                constraintName="fk_notification_admin_id"/>

        <addForeignKeyConstraint
                baseTableName="notification"
                baseColumnNames="client_id"
                referencedTableName="account"
                referencedColumnNames="id"
                constraintName="fk_notification_client_id"/>

        <addForeignKeyConstraint
                baseTableName="notification"
                baseColumnNames="batch_order_id"
                referencedTableName="orders"
                referencedColumnNames="order_id"
                constraintName="fk_notification_batch_order_id"/>

    </changeSet>

</databaseChangeLog>